[all:vars]
{% raw %}dir="{{ ansible_user_dir }}/clusterconfigs"
{% endraw %}
domain="{{ domain }}"
cluster="{{ cluster }}"
extcidrnet="{{ extcidrnet }}"
install_type=sno

ansible_ssh_extra_args='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'

[provisioner]
localhost ansible_connection=local ansible_user=dci-openshift-agent

[masters]
master-0.{{ cluster }}.{{ domain }} name=master-0 role=master ansible_user=core

