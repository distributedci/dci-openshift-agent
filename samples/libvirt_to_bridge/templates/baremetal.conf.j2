strict-order
server=/apps.{{ cluster }}.{{ domain }}/127.0.0.1
local=/{{ cluster }}.{{ domain }}/
domain={{ cluster }}.{{ domain }}
expand-hosts
except-interface=lo
bind-dynamic
interface=baremetal
dhcp-range=192.168.123.100,192.168.123.150,255.255.255.0
dhcp-no-override
dhcp-authoritative
dhcp-lease-max=51
dhcp-hostsfile=/var/lib/dnsmasq/baremetal.hostsfile
addn-hosts=/var/lib/dnsmasq/baremetal.addnhosts
