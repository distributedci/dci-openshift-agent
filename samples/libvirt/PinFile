---
libvirt-network:
  topology: libvirt-network.yml
  hooks:
    predestroy:
      - name: ocp-dci-setup
        type: ansible
        context: True
        actions:
          - playbook: requirements.yml

cfgs:
  libvirt:
    __IP__: name
    __ADDRESS__: ip

libvirt-hosts:
  topology: libvirt-hosts.yml
  layout: libvirt-hosts.yml
  hooks:
    predestroy:
      - name: ocp-dci-setup
        type: ansible
        context: True
        actions:
          - playbook: remove_snapshot.yml
    postdestroy:
      - name: ocp-dci-setup
        type: ansible
        context: True
        actions:
          - playbook: vbmc.yml
            extra_vars: { "hook_action": "cleanup" }
    postup:
      - name: ocp-dci-setup
        type: ansible
        context: True
        actions:
          - playbook: dns_update.yml
            vars: ../../../libvirt_settings.yml
          - playbook: nic_adjust.yml
            vars: ../../../libvirt_settings.yml
          - playbook: vbmc.yml
            extra_vars: { "hook_action": "install" }
          - playbook: dci_settings.yml
            vars: ../../../libvirt_settings.yml
